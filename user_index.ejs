                <th style="border: 2px solid black;">CATEGORY NAME</th>
                <th style="border: 2px solid black;">ACTION</th>
            </tr>
        </thead>
        <tbody>
            <% category_details.forEach(function(rows){ %>
                <tr>
                    <td>
                        <%= rows.category_id %>
